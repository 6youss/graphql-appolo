  "scripts": {
    "start": "cross-env NODE_ENV=development nodemon --watch dist --watch ../common/dist --exec npm run _start",
    "_start": "concurrently \"yarn workspace @jouwal/common watch\" \"ts-node --files src/index.ts\"",
    "test": "cross-env NODE_ENV=test jest --watch",
    "gen-schema-types": "ts-node src/scripts/createTypes.ts",
    "build": "npm run clean && npm run compile",
    "clean": "rm -rf ./dist && rm -rf tsconfig.tsbuildinfo",
    "compile": "tsc -b tsconfig.json && copyfiles -u 1 src/**/*.graphql dist/server/src"
  },
  "jest": {
    "rootDir": "./src",
    "globalSetup": "./testUtils/callSetup.js",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
